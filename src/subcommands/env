#!/usr/bin/env bash

set -eo pipefail; [[ $DEBUG ]] && set -x

env() {
  declare cmd="env"
  [[ "$1" == "$cmd" ]] && shift 1

  docker run --rm \
    --network $SWARMLET_NETWORK \
    -v $DOCKER_SOCKET:$DOCKER_SOCKET \
    -v $REPO_PATH:$REPO_PATH \
    $SWARMLET_REGISTRY/env "$@"

  # docker container exec $(docker ps --filter name=$SERVICE -q) cat /my-config
}

"$@"
